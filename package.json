{
  "name": "orchestrator-monorepo",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "build": "turbo run build",
    "build:all": "turbo run build",
    "pack:cli": "pnpm --filter @orchestrator/cli pack",
    "adapters:test": "pnpm --filter @orchestrator/adapters test",
    "adapters:smoke": "pnpm --filter @orchestrator/adapters smoke",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "guard:repo": "tsx scripts/guard_tracked_artifacts.ts",
    "check": "pnpm guard:repo && pnpm format:check && pnpm lint && pnpm typecheck && pnpm test && pnpm audit",
    "audit": "pnpm audit --audit-level=moderate",
    "release:check": "tsx scripts/release_check.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.2.0",
    "prettier": "^3.2.4",
    "tsx": "^4.21.0",
    "husky": "^9.1.7",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@types/semver": "^7.7.1",
    "semver": "^7.7.3",
    "ts-node": "^10.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "tree-sitter",
      "tree-sitter-go",
      "tree-sitter-javascript",
      "tree-sitter-python",
      "tree-sitter-rust",
      "tree-sitter-typescript"
    ]
  }
}
