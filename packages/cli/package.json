{
  "name": "@orchestrator/cli",
  "version": "0.0.0",
  "description": "Orchestrator CLI",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "orchestrator": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm build:bundle && pnpm build:types",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --log-level=warning",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/which": "^3.0.4",
    "esbuild": "^0.23.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@orchestrator/adapters": "workspace:*",
    "@orchestrator/core": "workspace:*",
    "@orchestrator/eval": "workspace:*",
    "@orchestrator/exec": "workspace:*",
    "@orchestrator/memory": "workspace:*",
    "@orchestrator/repo": "workspace:*",
    "@orchestrator/shared": "workspace:*",
    "@types/inquirer": "^8.2.12",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "inquirer": "^8.2.7",
    "picocolors": "^1.1.1",
    "which": "^6.0.0"
  }
}
